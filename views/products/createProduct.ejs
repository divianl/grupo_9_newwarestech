                <label><input type="radio" name="product_type" value="printer">printer</label>
            </fieldset><br>
            <fieldset>
                <legend>Ingresa la Infomaci√≥n</legend>
                <input type="text" name="name" placeholder="nombre"><br>
                <label for="img">Imagen</label><input type="file" name="img" id="img"><br>
                <input type="text" name="price" placeholder="precio"><br>
